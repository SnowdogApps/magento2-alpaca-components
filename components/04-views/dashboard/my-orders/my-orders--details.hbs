{{ render '@header' }}

<div class="dashboard container">
    <div class="grid">
        <div class="grid__column grid__column--1-4 dashboard__sidebar">
            {{ render '@dashboard-nav' }}
        </div>

        <div class="grid__column grid__column--3-4 dashboard__content">

            <div class="dashboard__handler">
                <h3 class="heading heading--third-level dashboard__title--wrapped">
                    {{ orderNumber }}
                </h3>

                <span class="dashboard__status">
                    {{ orderStatus }}
                </span>
            </div>

            {{> '@dashboard-actions' orderActions }}

            {{> '@dashboard-table' itemsOrdered }}

            {{> '@dashboard-table' invoice }}

            {{> '@dashboard-table' orderShipment }}

            <h2 class="heading heading--fifth-level dashboard__title">
                {{ orderInfoTitle }}
            </h2>

            <div class="grid">
                {{> '@dashboard-information' orderInfo }}
            </div>

            {{> '@dashboard-actions' action }}
        </div>
    </div>
</div>

{{ render '@footer' }}
