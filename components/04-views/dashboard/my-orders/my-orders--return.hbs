{{ render '@header' }}

<div class="dashboard container">
    <div class="grid">
        <div class="grid__column grid__column--1-4 dashboard__sidebar">
            {{ render '@dashboard-nav' }}
        </div>

        <div class="grid__column grid__column--3-4 dashboard__content">
            <h2 class="heading heading--fourth-level dashboard__title">
                {{ title }}
            </h2>

            <div class="grid">
                {{> '@dashboard-information' returnInfo }}
            </div>

            {{> '@input' contactEmailAddress }}

            {{> '@dashboard-form' returnForm }}

            {{> '@dashboard-actions' addReturnItem }}

            {{> '@input--textarea' comments }}

            {{> '@dashboard-actions' action }}
        </div>
    </div>
</div>

{{ render '@footer' }}
