<div class="page-wrapper">
    {{ render '@header' }}

    <div class="dashboard container">
        <div class="grid">
            <div class="grid__column grid__column--1-4 dashboard__sidebar">
                {{ render '@dashboard-nav' }}
            </div>

            <div class="grid__column grid__column--3-4 dashboard__content">
                <h2 class="heading heading--fourth-level dashboard__title">
                    {{ title }}
                </h2>

                {{ render '@product' product }}

                {{ render '@review--add' review }}

                <h3 class="heading heading--fifth-level dashboard__title">
                    {{ yourReview }}
                </h3>

                {{ render '@review' }}
            </div>
        </div>
    </div>
</div>

{{ render '@footer' }}
