{{ render '@header' }}

<main class="container registration">

    <h1 class="registration__title">
        {{ title }}
    </h1>

    <div class="registration__content">
        <fieldset class="fieldset registration__fieldset {{ personalSection.fieldset.class }}"
            {{{ personalSection.fieldset.attributes }}}
        >
            <legend class="fieldset__legend registration__legend {{ personalSection.legend.class }}"
                {{{ personalSection.legend.attributes }}}
            >
                {{ personalSection.legend.text }}
            </legend>

            {{ render '@input' firstName }}
            {{ render '@input' lastName }}
            {{ render '@checkbox' newsletterCheckbox }}

        </fieldset>

        <fieldset class="fieldset registration__fieldset {{ signInSection.fieldset.class }}"
                  {{{ signInSection.fieldset.attributes }}}
        >
            <legend class="fieldset__legends registration__legend {{ signInSection.legend.class }}"
                {{{ signInSection.legend.attributes }}}
            >
                {{ signInSection.legend.text }}
            </legend>

            {{ render '@input' email }}
            <div class="registration__input">
                {{ render '@input' password }}
                {{ render '@password-strength' passwordStrength }}
            </div>
            {{ render '@input' passwordConfirmation }}
            </fieldset>

        {{ render '@button' registrationButton }}
    </div>
</main>

{{ render '@footer' }}
