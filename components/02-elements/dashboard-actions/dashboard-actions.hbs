<div class="dashboard-actions {{ class }}">
    {{#each sides }}
        <div class="dashboard-actions__handler">
            {{#each action }}
                {{#if button }}
                    <button class="button dashboard-actions__button {{ this.class }}"
                            type="button"
                    >
                        {{ title }}
                    </button>
                {{else}}
                    <a href="#" class="link dashboard-actions__link {{ this.class }}">
                        {{ title }}
                    </a>
                {{/if}}
            {{/each }}
        </div>
    {{/each}}
</div>
