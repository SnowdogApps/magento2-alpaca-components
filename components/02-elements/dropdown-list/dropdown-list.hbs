<div class="dropdown-list {{ class }}" >
    <ul class="dropdown-list__list">
        {{#each dropdowns as |dropdown|}}
            <li class="
                    dropdown-list__item
                    {{#if collapse }}
                        dropdown-list__item--collapse
                    {{/if}}
                "
            >
                <{{ itemTag }} {{{ itemAttributes }}}
                   class="dropdown-list__label"
                   {{#if id }}
                        data-dropdown="{{ id }}"
                   {{/if}}
                >
                    {{ title }}
                    {{#if collapse }}
                        <svg class="dropdown-list__icon">
                            <use xlink:href="{{ svg 'arrow-down' }}"></use>
                        </svg>
                    {{/if}}
                </{{ itemTag }}>
                {{#if contentElement}}
                    <div id="{{ id }}"
                         class="dropdown-list__content"
                         data-content="{{ id }}"
                         aria-hidden="true"
                    >
                        {{{ contentElement }}}
                    </div>
                {{/if}}
            </li>
        {{/each}}
    </ul>
</div>
<script src="{{static 'dropdown-list.js' }}"></script>
