<div class="dropdown-list {{ class }}" {{{ attributes }}}>
    <ul class="dropdown-list__list">
        {{#each dropdowns as |dropdown|}}
            <li class="
                    dropdown-list__item
                    {{#if collapse }}
                        dropdown-list__item--collapse
                    {{/if}}
                "
            >
                <{{ itemTag }}
                   class="dropdown-list__label {{ class }}"
                   {{{ itemAttributes }}}
                   {{#if id }}
                        data-dropdown="{{ id }}"
                   {{/if}}
                >
                    {{ title }}

                    {{#if collapse }}
                        {{ render '@icon' collapse }}
                    {{/if}}
                </{{ itemTag }}>

                {{#if contentElement}}
                    <div id="{{ id }}"
                         class="dropdown-list__content {{ class }}"
                         data-content="{{ id }}"
                         aria-hidden="true"
                    >
                        {{ render (component contentElement) contentContext }}
                    </div>
                {{/if}}
            </li>
        {{/each}}
    </ul>
</div>

{{#if script}}
    <script src="{{static 'dropdown-list.js' }}"></script>
{{/if}}
