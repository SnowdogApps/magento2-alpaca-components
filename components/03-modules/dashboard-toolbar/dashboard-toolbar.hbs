        <span class="dashboard-toolbar__amount-info">
            {{ leftItems }}
        </span>
    </div>

    <div class="dashboard-toolbar__limiter grid__column grid__column--1-2">
        <span class="dashboard-toolbar__amount-info">
            Show
        </span>

        {{> '@select' limiter }}

        <span class="dashboard-toolbar__amount-info">
            per page
        </span>
    </div>

    {{> '@pager' pager }}
</div>
