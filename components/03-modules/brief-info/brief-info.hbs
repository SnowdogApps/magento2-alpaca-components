<div class="brief-info">
    <{{heading.tag}} class="brief-info__heading {{heading.class}}">
       {{heading.text}}
    </{{heading.tag}}>
    {{#each items as |item|}}
    <div class="brief-info__item">
        <i class="brief-info__icon-wrapper {{ item.iconWrapperClass }}">
            {{ render '@icon' item.icon }}
        </i>
        <div class="brief-info__content">
            <{{ item.title.tag }}
                {{{ item.title.attributes }}}
                class="brief-info__title {{ item.title.class }}"
            >
               {{ item.title.text }}
            </{{ item.title.tag }}>
        </div>
    </div>
    {{/each}}
</div>
