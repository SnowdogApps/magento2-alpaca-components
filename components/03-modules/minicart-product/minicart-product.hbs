<div class="minicart-product">
    <div class="minicart-product__image">
        {{ render '@image' productImage }}
    </div>
    <div class="minicart-product__info">
        <h3 class="minicart-product__name">
            {{ productName }}
        </h3>
        {{#if configurable }}
            {{ render '@dropdown-list' attributes }}
        {{/if}}
        <div class="minicart-product__price">
            {{ productPrice }}
        </div>
        <div class="minicart-product__bottom">
            <div class="minicart-product__qty">
                <form class="minicart-product__qty-form">
                    {{ render '@input--inline' qtyInput }}
                </form>
            </div>
            <div class="minicart-product__action">
                {{ render '@button--icon' editIcon }}
                {{ render '@button--icon' removeIcon }}
            </div>
        </div>
    </div>
</div>
