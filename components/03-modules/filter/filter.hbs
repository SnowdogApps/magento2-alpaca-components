<li class="dropdown-list__item dropdown-list__item--collapse filter {{class}}">
    <div class="dropdown-list__label filter__label"
         data-dropdown="{{id}}"
    >
        {{title}}

        {{ render '@icon' icon }}
    </div>
    <div id="{{id}}"
         class="dropdown-list__content filter__content"
         data-content="{{id}}"
         aria-hidden="true"
    >
        {{ text }}

        {{# if componentObject }}
            {{ render (component componentObject.name) componentObject.config }}
        {{/if}}

        <div class="filter__divider"></div>
    </div>
</li>

