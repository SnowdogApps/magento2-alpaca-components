<li class="dropdown-list__item dropdown-list__item--collapse filter">
    <div class="dropdown-list__label filter__label"
         data-dropdown="{{id}}"
    >
        {{title}}

        {{ render '@icon' icon }}
    </div>
    <div id="{{id}}"
         class="dropdown-list__content filter__content"
         data-content="{{id}}"
         aria-hidden="true"
    >
        <div class="filter__color">
            {{# each options }}
                <a href='{{this.href}}'
                   class="filter__color-option {{this.class}}"
                   aria-label="{{this.ariaLabel}}"
                >
                    <div class="filter__color-sample"
                         {{{ this.attributes }}}
                    ></div>
                    <span class="filter__color-label">
                        {{this.label}}
                    </span>
                </a>
            {{/each}}
        </div>
        <div class="filter__divider"></div>
    </div>
</li>
